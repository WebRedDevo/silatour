.category--country
  .initial-screen
    position: relative;
    &:before
      content ''
      background rgba(54,53,21,.63)
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      z-index 1
    &:after
      content ''
      position absolute
      left 0
      right 0
      bottom -1px
      height 29%
      background linear-gradient(to top, #fff, rgba(255,255,255, 0) )
      z-index 1
    img
      position: absolute;
  .country-filter
    &__section.container
      margin-top -40px
      z-index 3
      position relative
    &__block
      background #fff
      margin 0 10px
      padding 30px
      overflow hidden
      border-radius 5px
      box-shadow 0 0 15px rgba(0,0,0, .14)
  .info
    position relative
    padding 10% 0 6%
    z-index 3
    text-align center
  h1
    text-transform uppercase
    color #fff
    font-size: 100px
    overflow-wrap break-word
    font-weight 800
    letter-spacing 7px
    line-height 100px
    margin-bottom 15px
  p
    color #fff
    font-family 'Qanelas-Regular'
    font-size: 21px
    margin-bottom: 50px
    line-height: 39px
  button
    background #ffeb7c
    color #2f2f2f
    font-size 17px
    line-height 15px
    border 0
    padding 15px 19px
    margin-right 10px
    border-radius 4px
    font-family 'Qanelas-Regular'
    margin-bottom 10px
  .container
    flex-wrap: wrap;
    margin-top: 50px
    padding: 0 340px
    justify-content center

.article-short-guidebook
  margin: 0 10px 20px
  max-width: calc(33% - 40px)
  box-shadow: 0px 0px 10px rgba(0,0,0, .3)
  border-radius: 7px
  position: relative;
  overflow: hidden;
  width: 100%;
  a
    font-family Qanelas
  &:before
    content ''
    position absolute
    z-index 1
    top 0
    left 0
    right 0
    bottom 0
    background rgba(54, 53, 21, 0.55)
  &:after
    content ''
    top 0
    bottom 0
    left 0
    right 0
    margin auto
    width 100px
    position absolute
    background rgba(0, 0, 0, 0.69)
    border-radius 50%
    height 100px
    transform scale(0)
    opacity 0
    transition .55s
  &:hover
    &:after
      transform scale(7)
      opacity 1
  img
    position: absolute;
  &__header
    position: relative;
    bottom: 0;
    z-index: 2;
    padding: 160px 30px 50px
    text-align: center;
    .icon
      width 45px
      height 45px
      position relative
    span
      font-size: 1.125rem;
      padding: 6px 11px;
      color: #fff;
      border: 1px solid;
      border-radius: 3px;
      margin: 4px
      display: inline-block;
  h3
    text-transform: uppercase
    color #fff
    font-weight 800
    letter-spacing 2px
    font-size 25px
    margin-bottom 15px
