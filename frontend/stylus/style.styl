$red-color = #f75757
$silatour-grdient = linear-gradient(to right, #43FFBA, #85FF8C)
@import '../fonts/fonts.css'
:root
  --silatourColor #bfffc6
  --colorYellow #ffeb7c
  --colorBlack #2e2e2e
  --lightMode #333
  --darkNight #151a30
  --lightNight #262e45



@import 'inc/reset.styl'

.flex
  display flex
.grid
  display grid
.container
  margin 0 auto
  max-width 1920px
  padding 0 10%
.speedbar
  font-size 15px
  font-weight 300
  opacity .67
  transition .33s
  &:hover
    opacity 1
  span
    color gray(90)
    a
      color #fff
      padding-bottom 1px
      border-bottom 1px solid
      transition .33s
      font-size 14px
      &:hover
        border-bottom 0px

// Навигация
.navigation
  width 100%
  text-align center
  margin 35px 0
  span
    font-size 36px
    opacity 1
  a
    color #333
    opacity .5
    font-size 33px
    margin 15px
    &:hover
      opacity 1
    .icon
      fill #333
      opacity .2
      transition .55s
      width 130px
      &:hover
        opacity 1
  .right
    transform: rotate(180deg)
    right 50px
    position fixed
    bottom 0
  .left
    left 50px
    position fixed
    bottom 0

.close
  position absolute
  right 0
  background 0
  border 0
  fill #fff
  .icon
    height 40px
    width 40px

p
  a
    border-bottom 1px solid var(--silatourColor)
    padding-bottom 1px
