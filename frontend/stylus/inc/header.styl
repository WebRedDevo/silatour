.header
  position absolute
  z-index 9
  padding 15px 5%
  width 100%
  justify-content space-between
  &.fixed
    max-height 60px
    background #bdfee0
    position fixed
    .logotype
      font-size 27px
      letter-spacing 2px
      color #333
    .header__left-side
      .header__menu
        &-item
          font-weight 300
          font-size 17px
          a
            color #333
            display block
  &:hover
    .header__navigation,
    .header__right-side
      opacity 1
  &__left-side
    align-items center
    .header__menu
      &-item
        font-weight 300
        font-size 18px
        a
          color var(--lightMode)
          border-radius 50px
          margin 11px 13px
          display block
          position relative
          &:after
            content ''
            width 0%
            height 1px
            background var(--lightMode)
            position absolute
            bottom -6px
            left 0
            transition .55s
          &:hover
            &:after
              width 100%
  &__right-side
    opacity .4
    transition .55s
    align-items center
    justify-content flex-end
    .icon
      height 17px
      width: 17px
      fill #333
      margin-right 8px
    button
      border-radius 50px
      background 0
      color #333
      padding 10px 25px
      border 1px solid
      margin-left 12px
      align-items center
    label
      border-radius 50px
      border 1px solid #333
      width 50px
      height 25px
      cursor pointer
      margin-right 10px
      &:before
        content ''
        height 25px
        transform translateX(-5px)
        width 25px
        background #ffeb7c
        border-radius 50%
        display block
        transition .55s
  input
    display none
    &:checked + label
        &:before
          transform translateX(30px)
          background #fff
  .header__navigation
    margin-left 94px
    opacity .4
    transition .55s
  .logotype
    font-family Debby
    color var(--lightMode)
    font-size 68px
