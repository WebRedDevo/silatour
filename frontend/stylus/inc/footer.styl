.footer
  background #444444
  padding 50px
  position relative
  z-index 9
  flex-direction column
  align-items center
  &__list-info
    margin-bottom 20px
    a
      margin 0 10px
      color #fff
      font-weight 200
      position relative
      &:after
        content ''
        width 0%
        height 1px
        background #fff
        position absolute
        bottom -6px
        left 0
        transition .55s
      &:hover
        &:after
          width 100%
  &__cpr
    text-align center
    color #ccc
    font-weight 200
    font-size 14px
