.fullstory
  background #f7f7f7
  .initial-screen
    position relative
    &:hover
      img
        filter blur(2px)
    &__info
      position: relative;
      z-index: 1;
      padding: 13% 0
      max-width: 965px;
      text-align: left;
      margin 0 auto
    &:before
      content ''
      position absolute
      left 0
      right 0
      top 0
      bottom 0
      background rgba(54,53,21,.67)
      z-index 1
    &:after
      content ''
      position absolute
      left 0
      right 0
      bottom -4px
      height 29%
      background linear-gradient(to top, #f7f7f7, rgba(255,255,255, 0) )
      z-index 1
    img
      position absolute
      transition .55s
    .category
      text-transform uppercase
      color var(--silatourColor)
      letter-spacing 2px
      font-weight 500
    h1
      font-size 48px
      color #fff
      margin-bottom: 40px;
      margin-top 10px
      line-height 54px
      margin-right: 100px
      position relative
    .speedbar
      margin-top 90px
  &__content
    background #fff
    max-width 650px
    border-radius 0
    position relative
    z-index 1
    border-radius 9px
    margin-right: 15px;
    padding 50px 0
    p
      padding 0 50px
    p,a
      font-size 19px
      line-height 28px
      color #333
      font-weight 300
      margin-bottom 20px
    h2,h3,h4,h5,h6
      padding 0 50px
      color #333
      margin-bottom 10px
    h2
      font-size 29px
      margin-top 30px
      line-height 42px
    img
      margin-bottom 15px
      border-radius: 3px;

.fullstory__aside
  position sticky
  top 0
  height max-height
  width 100%
  max-width 300px
  .article-short-guidebook
    max-width: 100%;
    border-radius 0
    border-radius: 5px;

.fullstory__container
  max-width: 1920px
  justify-content: center;
  padding 0 10%
  margin: -150px auto;
  z-index: 1;
  position: relative;
  align-items: flex-start;
