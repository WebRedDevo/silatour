.main
  &__initial-screen
    padding-top 125px
    background #1e1e1e
    .left-side
      max-width 72%
      width 100%
      padding 266px
      height 100vh
      position sticky
      margin-top -125px
      top 0
      img
        position absolute
        top 0
        left 0
      &:before
        content ''
        background rgba(54, 53, 21, 0.63)
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        z-index 1
    .wrap
      position relative
      z-index 2
    h1
      font-size 50px
      color #fff
      line-height 56px
      span
        border-bottom 1px dashed
        cursor pointer
        transition .55s
        &:hover
          color var(--silatourColor)

    p
      margin 19px 0
      color #ccc

    .right-side
      max-width 28%
      width 100%
      padding-left 20px
      justify-content flex-start
      flex-wrap wrap


.initial-screen__form
  &:hover
    .form__search
      background #fff
.form__search
  padding 15px
  margin-right 5px
  width 70%
  background rgba(255,255,255, .7)
  transition .55s
  font-size 18px
.form__button
  display none
  + label
    background var(--silatourColor)
    display flex
    align-items center
    padding 17px 20px
    .icon
      fill #333
      width 30px
      height 30px


.article-posts
  height 400px
  max-width 91%
  position relative
  overflow: hidden;
  border-radius 7px
  box-shadow 0 10px 20px -5px rgba(0,0,0,.2)
  margin-bottom 20px
  a
    &:before
      content: '';
      position: absolute;
      z-index: 1;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(54, 53, 21, 0.55);

  &__header
    position: absolute;
    padding: 40px 35px;
    top 0
    z-index: 2;
  &__categeory
    text-transform uppercase
    color #fff
    font-weight 100
    font-size 31px
    width min-content
    margin-bottom 8px
    span
      font-weight 800
  &__views
    color #fff
    align-items center
    font-size 19px
    font-weight 200
    span
      margin-right 8px
    .icon
      fill #fff
      width 25px
      height 25px

  &__footer
    position: absolute;
    padding: 0 35px 50px;
    bottom: 0;
    z-index: 2;
  h3
    color: #fff;
    font-weight 300
    font-size: 26px;
    line-height: 30px;
