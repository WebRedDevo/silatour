.travel-tip-page
  .initial-screen
    position relative
    &:hover
      img
        filter blur(2px)
    &__info
      max-width 950px
      margin auto
      padding: 20% 0 14%
      position relative
      z-index 1
      text-align center
    &:before
      content ''
      position absolute
      left 0
      right 0
      top 0
      bottom 0
      background rgba(54,53,21,.67)
      z-index 1
    &:after
      content ''
      position absolute
      left 0
      right 0
      bottom -4px
      height 29%
      background linear-gradient(to top, rgba(255,255,255, 1), rgba(255,255,255, 0) )
      z-index 1
    .close
      margin-top -50px
    img
      position absolute
      transition .55s
    .category
      text-transform uppercase
      color var(--silatourColor)
      font-size 20px
      letter-spacing 3px
      font-weight 500
      margin-bottom 20px
    h1
      font-size 66px
      color #fff
      margin-bottom 20px
      margin-top 20px
      line-height 59px
      position relative
    p
      color #fff
      font-size 20px
      position relative
      padding 0 10%
      line-height 24px
    .speedbar
      margin-top 90px
  &__info
    background #fff
    box-shadow 3px 2px 20px rgba(0, 0, 0, 0.13)
    margin -160px auto 0
    max-width 950px
    position relative
    z-index 1
    padding 7% 9%
    border-radius 5px 5px 0 0
    p
      font-size 19px
      line-height 28px
      font-weight 300
      color #333
      margin-bottom 20px
    h2
      font-size 34px
      color #333
      margin-top 30px
      margin-bottom 10px
      line-height 42px
