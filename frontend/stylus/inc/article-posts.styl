.article-posts
  margin-right 20px
  max-width 100%
  min-width 300px
  height 440px
  border-radius 14px
  position relative
  overflow hidden
  box-shadow 0 10px 20px -5px rgba(0,0,0,.2)
  margin-bottom 20px
  a
    font-family Qanelas
    &:before
      content ''
      position absolute
      z-index 1
      top 0
      left 0
      right 0
      bottom 0
      background rgba(54, 53, 21, 0.55)
    &:after
      content ''
      top 0
      bottom 0
      left 0
      right 0
      margin auto
      width 100px
      position absolute
      background rgba(0, 0, 0, 0.69)
      border-radius 50%
      height 100px
      transform scale(0)
      opacity 0
      transition .55s
    &:hover
      &:after
        transform scale(7)
        opacity 1
  &__header
    position absolute
    padding 40px 35px
    top 0
    z-index 2
  &__categeory
    text-transform uppercase
    color #fff
    font-weight 100
    font-size 24px
    width min-content
    margin-bottom 8px
    line-height 20px
    span
      font-weight 800
  &__views
    color #fff
    align-items center
    font-size 16px
    font-weight 200
    span
      margin-right 8px
    .icon
      fill #fff
      width 25px
      height 25px

  &__footer
    position: absolute;
    padding: 0 35px 50px;
    bottom: 0;
    z-index: 2;
  h3
    color #fff
    font-weight 300
    font-size 23px
    line-height 24px



.article-posts
  &.article-posts--popular
    height 285px
    &:hover
      .article-posts
        &__footer
          background rgba(255,255,255, 1)

    .article-posts
      &__categeory
        font-size 18px
        margin-bottom 2px
      &__views
        font-size 17px
      &__footer
        transition .55s
        background rgba(255,255,255, .9)
        padding 25px
        width 100%
        h3
          color #333
          font-size 20px


.related
  justify-content center
  .article-posts
    margin 0 10px
    width 300px
  .article-related
    margin 0 10px

.article-related
  height 390px
  width 290px
  position relative
  border-radius 5px
  overflow hidden
  a
    &:before
      content ''
      position absolute
      z-index 1
      top 0
      left 0
      right 0
      bottom 0
      background rgba(54, 53, 21, 0.55)
  &__category
    margin-bottom 7px
    span
      text-transform uppercase
      color #fff
      font-size 13px
      font-weight 300
      letter-spacing 3px
  &__header
    height max-content
    text-align center
    position absolute
    max-height 50px
    top 0
    bottom 0
    left 0
    right 0
    margin auto
    z-index 1
    padding 50px 20px 0
  h3
    color #fff
    font-size 21px
    font-weight 600
    line-height 24px
    font-family Qanelas
