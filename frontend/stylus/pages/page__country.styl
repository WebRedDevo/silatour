.country-page
  .speedbar
    position absolute
    bottom 35px
    left 9%
    z-index 9
    span, a
      color #686868
  .initial-screen
    position relative
    &:before
      content ''
      background rgba(54, 53, 21, 0.63)
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      z-index 1
    &:after
      content ''
      position absolute
      left 0
      right 0
      bottom -1px
      height 29%
      background linear-gradient(to top, #fff, rgba(255,255,255, 0) )
      z-index 1
    &__img
      position absolute
    .close
      right 9%
      position absolute
      top 14%
    .container
      padding 6% 9%
      position relative
      align-items center
      justify-content space-between
      z-index 2
    h1
      font-size 80px
      color #fff
      font-weight 800
      background rgba(0,0,0, .36)
      padding 3px 19px 14px
      border-radius 4px
      display inline-block
      margin 7px 0
    p
      color #fff
      font-size 18px
      margin 3px 0
      font-family 'Qanelas-Regular'
    &__info
      max-width 65%
      width 100%
      .social-share
        margin-top 20px
      .buttons
        margin-top 28px
        flex-wrap wrap
        button
          background #ffeb7c
          color #2f2f2f
          font-size 17px
          line-height 15px
          border 0
          padding 15px 19px
          margin-right 10px
          border-radius 4px
          font-family 'Qanelas-Regular'
          margin-bottom 10px
    &__map
      position relative
      margin-top 50px
      .icon
        fill rgba(255,255,255, .8)
        width 600px
        height 500px
        transition .55s
        &:hover
          fill rgba(255,255,255, 1)




.mini-info
  .icon
    width 75px
    height 75px
    position relative
  a
    color #fff
    border 1px solid
    padding 6px 11px
    margin-left 8px
    border-radius 3px
    font-size 18px
    position relative
    bottom 25px



.section
  position relative
  h2
    font-size 46px
    margin-bottom: 25px
    color #333
    font-weight: 800;
  p,a
    color #333
    font-size: 19px
    margin-bottom: 20px
    line-height: 28px
    font-family 'Qanelas-Regular'
  .left-side
    max-width: 50%;
    align-items: center;

  .right-side
    width 50%
  .left-line
    flex-direction: column;
    align-items: center;
    margin-right: 60px
    hr
      height: 200px;
      width: 3px;
      margin: 25px 0;
      background: #333;
      border: 0;
    span
      color: #333



.info-country
  .left-side
    padding: 100px 200px 100px 100px
  .right-side
    height 100vh
    position sticky
    top 0

.geo-country
  .left-side
    position: sticky;
    margin-top: 0
    top 0
    max-height: 100vh
    width: 50%
  .right-side
    padding: 100px 200px 100px 100px
  .left-line
    flex-direction: row;
    align-items: center;
    margin-bottom: 50px
    hr
      height: 4px;
      width:200px;
      margin: 25px ;
      background: #333;
      border: 0;
    span
      color: #333

.midle-side
  max-width 450px
  background #000
  position absolute
  height 50vh
  left -95px
  z-index 2
  bottom 0
  overflow hidden
  border-radius 5px 5px 0 0
  transition .55s
  &::-webkit-scrollbar
    width 3px
  &::-webkit-scrollbar-thumb
    background var(--silatourColor)
  &:hover
    height 80vh
    border-radius 0
    overflow auto
  ul
    padding: 50px 100px
  li
    margin: 25px 0
  h6
    color #fff
    font-size: 23px
    font-weight: 600
    margin-bottom: 4px

  p,a
    color #ccc
    font-family 'Qanelas-Regular'
    font-size: 20px


.num-part
  position: absolute;
  right: 50px
  bottom: 50px
  z-index: 3
  span
    color #333
    font-size: 23px
    font-family 'Qanelas-Regular'
  b
    display: block;

.climate-country, .geografy-country
    padding 65px 20%
    align-items center
.section--map
  h2
    text-align center
    font-size 36px
    max-width 600px
    font-weight 300
    margin auto
    margin-bottom 35px
    line-height 39px
#map
    height 60vh
